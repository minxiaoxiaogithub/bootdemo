<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xx.bootdemo.dao.UserDao">

    <insert id="add" parameterType="com.xx.bootdemo.entity.User">
        INSERT INTO XX_USER VALUES (#{id},#{name},#{age})
    </insert>

    <delete id="delete">
        DELETE FROM XX_USER WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE XX_USER
        <set>
        <if test="age != null" >
            age = #{age,jdbcType=DECIMAL},
        </if>
        <if test="name != null" >
            name = #{name,jdbcType=VARCHAR},
        </if>
        </set>
    </update>

    <select id="list" resultType="com.xx.bootdemo.entity.User">
        SELECT * FROM XX_USER
    </select>

    <select id="getById" resultType="com.xx.bootdemo.entity.User">
        SELECT * FROM XX_USER WHERE id = #{id}
    </select>

</mapper>

